{
  "expo": {
    "name": "Animal Tracker",
    "slug": "animal-tracker-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "android": {
      "package": "com.farm.animaltracker",
      "versionCode": 1,
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.farm.animaltracker",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app needs Bluetooth access to detect nearby animals with BLE trackers."
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Animal Tracker to access your location for GPS tracking."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#4CAF50"
        }
      ],
      "react-native-ble-plx"
    ]
  }
}
